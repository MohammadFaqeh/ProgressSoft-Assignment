Vagrant.configure("2") do |config|
  # Match the required input image
  config.vm.box = "bento/ubuntu-24.04"

  # Forward guest port 7070 to host port 9090
  config.vm.network "forwarded_port", guest: 7070, host: 9090

  # Set VM memory to 2GB as required
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
  end

  # Automated installation of required software
  config.vm.provision "shell", inline: <<-SHELL
    sudo apt-get update
    sudo apt-get install -y openjdk-8-jdk  # Install Java 8
    sudo apt-get install -y tomcat9         # Install Tomcat 9
    # Update Tomcat port to 7070
    sudo sed -i 's/Connector port="8080"/Connector port="7070"/' /etc/tomcat9/server.xml
    sudo systemctl restart tomcat9
  SHELL
end
